<?xml version="1.0"?>
<tool_dependency>
    <package name="galaxy_protk" version="1.1.8">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://dl.dropbox.com/u/226794/galaxy_protk.tar.gz</action>
                <action type="shell_command">sh install_protk.sh $HOME/.protk $HOME/.rvm 1.1.8</action>
                <action type="move_file">
                    <source>install_protk.sh</source>
                    <destination>$INSTALL_DIR</destination>
                </action>
                <action type="move_file">
                    <source>install_protk.log</source>
                    <destination>$INSTALL_DIR</destination>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="PATH" action="prepend_to">$HOME/.rvm/bin/</environment_variable>
                </action>                
            </actions>
        </install>
        <readme>
            Installing this package

        </readme>
    </package>

    <package name="trans_proteomic_pipeline" version="4.6.1">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://dl.dropbox.com/u/226794/galaxy_protk.tar.gz</action>
                <action type="shell_command">sh install_tpp.sh $HOME/.rvm 1.1.8 $INSTALL_DIR</action>
                <action type="move_file">
                    <source>install_tpp.sh</source>
                    <destination>$INSTALL_DIR</destination>
                </action>
                <action type="move_file">
                    <source>install_tpp.log</source>
                    <destination>$INSTALL_DIR</destination>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>                
            </actions>
        </install>
        <readme>
            TPP

        </readme>
    </package>

</tool_dependency>